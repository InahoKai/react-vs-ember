{
  "compilerOptions": {
    "target": "ES2017",
    "allowJs": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false,
    "noEmit": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "module": "es6",
    "paths": {
      "example-app/*": [
        "src/*"
      ],
      "example-app/src/*": [
        "src/*"
      ],
      "@ember": ["node_modules/@types/ember/index.d.ts"],
      "ember-redux": ["node_modules/ember-redux/index.d.ts"],
      "*": [
        "types/*"
      ]
    }
  },
  "include": [
    "src",
    "tests",
    "types"
  ]
}
