{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "pretty": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "isolatedModules": true,
    "esModuleINterop": true,
    "paths": {
      "example-app/*": [
        "src/*"
      ],
      "example-app/src/*": [
        "src/*"
      ],
      "~/store/*": [
        "src/redux-store/*"
      ],
      "~/ui/*": [
        "src/ui/*"
      ],
      "*": [
        "types/*"
      ]
    }
  },
  "include": [
    "src",
    "types"
  ]
}
